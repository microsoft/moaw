{
  "name": "moaw-website",
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "format": "prettier --write '(src|scripts)/**/*.{ts,json,scss}'",
    "tag:version": "version=\"sha.$(git rev-parse --short HEAD)\" && perl -i -pe \"s/__VERSION__/$version/g\" dist/moaw-website/main.*.js",
    "build:scripts": "tsc -p scripts/tsconfig.json",
    "create:db": "node dist/scripts/create-workshop-db.js"
  },
  "private": true,
  "dependencies": {
    "@angular/common": "^14.1.0",
    "@angular/compiler": "^14.1.0",
    "@angular/core": "^14.1.0",
    "@angular/platform-browser": "^14.1.0",
    "@primer/octicons": "^17.4.1",
    "clipboard": "^2.0.11",
    "cxa-track": "^2.1.0",
    "marked": "^4.0.19",
    "ngx-markdown": "^14.0.1",
    "rxjs": "~7.5.0",
    "tslib": "^2.3.0",
    "yaml": "^2.1.1",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^14.1.0",
    "@angular/cli": "~14.1.0",
    "@angular/compiler-cli": "^14.1.0",
    "@types/primer__octicons": "^17.3.0",
    "prettier": "^2.7.1",
    "typescript": "~4.7.2"
  },
  "browserslist": [
    "last 1 Chrome version",
    "last 1 Firefox version",
    "last 2 Edge major versions",
    "last 2 Safari major versions",
    "last 2 iOS major versions",
    "Firefox ESR"
  ],
  "prettier": {
    "printWidth": 120,
    "singleQuote": true,
    "trailingComma": "none",
    "bracketSpacing": true
  }
}
