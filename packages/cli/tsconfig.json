{
  "compilerOptions": {
    "rootDir": "./src",
    "target": "es2021",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "lib": ["es2021"],
    "declaration": true,
    "outDir": "lib",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": ["./src"]
}
